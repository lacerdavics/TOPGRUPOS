rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Rules for group images
    match /group-images/{imageId} {
      // Allow read access to all users
      allow read: if true;
      
      // Allow write access to authenticated users
      allow write: if request.auth != null;
      
      // Allow delete access to authenticated users (for updating their own groups)
      allow delete: if request.auth != null;
    }
    
    // Rules for WebP converted images
    match /webp-images/{imageId} {
      // Allow read access to all users
      allow read: if true;
      
      // Allow write access for auto image update system
      allow write: if true;
      
      // Allow delete access for auto image update system
      allow delete: if true;
    }
    
    // Rules for cached images
    match /cached_images/{imageId} {
      // Allow read access to all users
      allow read: if true;
      
      // Allow write access for caching system
      allow write: if true;
      
      // Allow delete access for cache cleanup
      allow delete: if true;
    }
    
    // Rules for banner images
    match /banners/{imageId} {
      // Allow read access to all users (public banners)
      allow read: if true;
      
      // Allow write access to authenticated admins only
      allow write: if request.auth != null && 
                      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Allow delete access to authenticated admins only
      allow delete: if request.auth != null && 
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}