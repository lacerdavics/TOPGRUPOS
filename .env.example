# Configurações do TopGrupos Image Optimizer

# Ambiente
FLASK_ENV=development

# Servidor
HOST=0.0.0.0
PORT=5000

# Redis/Upstash (obrigatório para cache)
UPSTASH_REDIS_HOST=your-redis-host.upstash.io
UPSTASH_REDIS_PORT=6379
UPSTASH_REDIS_PASSWORD=your-redis-password
UPSTASH_REDIS_SSL=true

# Configurações de imagem
IMG_MAX_WIDTH=1920
IMG_MAX_HEIGHT=1080
IMG_THUMB_WIDTH=800
IMG_THUMB_HEIGHT=800

# Qualidade de compressão
IMG_WEBP_QUALITY=85
IMG_JPEG_QUALITY=90
IMG_AVIF_QUALITY=80
IMG_PNG_OPTIMIZE=true

# Cache
IMG_CACHE_TTL=604800  # 7 dias em segundos
IMG_CACHE_PREFIX=topgrupos_img

# Rede
IMG_DOWNLOAD_TIMEOUT=30
IMG_MAX_FILE_SIZE=15728640  # 15MB em bytes
IMG_USER_AGENT=TopGrupos-ImageOptimizer/1.0

# Formato padrão
IMG_DEFAULT_FORMAT=WEBP
IMG_PROGRESSIVE_JPEG=true
IMG_ENABLE_OPTIMIZATION=true